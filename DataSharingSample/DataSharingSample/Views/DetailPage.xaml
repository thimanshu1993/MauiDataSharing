<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataSharingSample.Views.DetailPage"
             Title="Employee Details">
    <StackLayout VerticalOptions="FillAndExpand" Padding="30" Spacing="20">
        <Label Text="Employee Name" FontAttributes="Bold" FontSize="30"/>
        <Label Text="{Binding SelectedEmployee.Name}" FontAttributes="Bold" FontSize="30"/>
        <Label Text="{Binding SelectedEmployee.Designation}" FontSize="20"/>
    </StackLayout>
</ContentPage>
